        </ul>
    </div>


    <div class="menu">
        <a style="font-size: 1.5em" href="#" id="menu"><i class="fa fa-bars"></i></a>
        <a style="font-size: 1.5em; float: right !important;" href="#"><i class="fa fa-search"></i></a>
    </div>




<script>
    $(document).ready(function(){

        openAndClose();
        $("#closeMenu").click(function(){
            close();
        });

        $(".full").mouseleave(function () {
            close();
        });

        function openAndClose(){
            $("#menu").click(function(e){
                e.preventDefault();

                if($(".full").hasClass("open")){
                    $(".full").removeClass("open");
                }else{
                    $(".full").addClass("open");
                }
            });
        }

        function close(){
            $(".full").removeClass("open");
        }

    });
</script>
</body>
