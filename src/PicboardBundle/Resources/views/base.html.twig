<body>
<style>
    body{
        margin: 0;
        padding: 0;
        background-color: lightgray;
    }
    .full{
        margin: 0;
        padding: 0;
        position: absolute;
        width: 300px;
        left: -310px;
        height: 100%;
        background-color: lightcoral;
        box-shadow: 0 0 20px black;
        transition: all .6s;
        z-index: 9999;
    }
    .open{
        left: 0;

    }
    .n-element{
        list-style: none;
    }
    .n-element:first-child{
        margin-top: 40px;
    }
    a{
        color: #000;
    }
    #closeMenu{
        padding: 15px;
        float: right !important;
    }
    .menu{
        padding: 10px;
        background-color: #162c44;
    }
    .menu > a{
        color: white;
        margin-left: 10px;
    }
    @media(max-width: 480px){
        .full{
            width: 200px;
        }
    }
</style>

